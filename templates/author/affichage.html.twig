<form method="get" action="{{ path('author_getAuthors') }}">
	<input type="text" name="author" placeholder="author name" value="{{ name|default('') }}">
	<button type="submit">Rechercher</button>
</form>

<h2>
	le tableau comporte
	{{authors| length}}
	auteurs
</h2>
<a href="{{path("author_insertAuthor")}}">Add new</a>

{% if authors is empty or authors is not defined %}
	<h2>
		v√©rifer votre tableau
	</h2>

{% else %}
	<table border="1">
		<tr>
			<th>Id</th>
			<th>name</th>
			<th>eventType</th>
            <th>nbre</th>
			<th>enable</th>
		</tr>
		{% set l=0 %}
		{% for elt in authors %}
			<tr>
				<td>{{elt.id}}</td>
				<td>{{elt.name | upper}}</td>
				<td>{{elt.eventType}}</td>
				<td>{{elt.enable}}</td>
                <td>{{elt.nbre}}</td>
				{% set l= l + elt.nbre %}
			</tr>

		{% endfor %}
		{# <h2>
																																					le nombre totale des books est
																																					{{l}}
																																				</h2> #}
	</table>

{% endif %}